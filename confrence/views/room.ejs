  <body>
       

<!--<i class="fa fa-microphone-slash" aria-hidden="true"></i>  -->
    <div class="main">
      <div class="main__letf">
        <div class="main_videos">
          <div id="video-grid">
          </div>
        </div>
        <div class="main__controls">
          <div class="main__controls__blocks"> 
            <div class="main__controls__button mutebnt" onclick="muteUnmute();">
              <i class="fa fa-microphone" aria-hidden="true"></i>
              <span> Mute </span>
            </div>
              <div class="main__controls__button videoctl" onclick="stopPlayVideo();">
                <i class="fas fa-video"></i>
              <span>Stop video</span>
            </div>
            <div class="main__controls__button">
              <i class='fa fa-shield-alt'></i>
              <span> Security </span>
            </div>
            <div class="main__controls__button">
              <i class='fa fa-user-friends'></i>

              <span> Participants </span>
            </div>

            <div class="main__controls__button">
              <i class="fa fa-comment"></i>
              <span> Chat </span>
            </div>
            <div class="main__controls__button">
              <small ></small>
              <span class="leavemeet"> Leave meeting </span>
            </div>
          </div>
          </div>
      </div>
      <div class="main__right">
        <div class="main__header">
          <h6> Chat </h6>

        </div>
        <div class="main__chat_window">
         <ul class="messge"></ul>
        </div>
        <div class="main__message_container">
          <input id="chat_message" type="text" placeholder="type messge" >
        </div>


      </div>

    </div>  
    
